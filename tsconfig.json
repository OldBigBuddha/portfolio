{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNEXT",
    "lib": [
      "DOM",
      "ESNEXT"
    ],
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["@types/*"]
    },
    "isolatedModules": true,
    "noEmit": true,
  },
  "include": [
    "src"
  ]
}
